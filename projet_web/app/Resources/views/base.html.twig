<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
		<title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
		<link href='{{ asset("../web/home.css") }}' rel="stylesheet">
		{% endblock %}
		<script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/2.0.2/anime.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
		
		<script>
		$(document).ready(function(){
	$('.m').each(function(){
  $(this).html($(this).text().replace(/([^\x00-\x80]|\w)/g, "<span class='letter'>$&</span>"));
});

anime.timeline({loop: true})
  .add({
    targets: '.m .letter',
    scale: [4,1],
    opacity: [0,1],
    translateZ: 0,
    easing: "easeOutExpo",
    duration: 950,
    delay: function(el, i) {
      return 70*i;
    }
  }).add({
    targets: '.m',
    opacity: 0,
    duration: 1000,
    easing: "easeOutExpo",
    delay: 1000
  }); 
  
$('.mm .letters').each(function(){
  $(this).html($(this).text().replace(/([^\x00-\x80]|\w)/g, "<span class='letter'>$&</span>"));
});

anime.timeline({loop: true})
  .add({
    targets: '.mm .letter',
    scale: [0.3,1],
    opacity: [0,1],
    translateZ: 0,
    easing: "easeOutExpo",
    duration: 600,
    delay: function(el, i) {
      return 70 * (i+1)
    }
  }).add({
    targets: '.mm .line',
    scaleX: [0,1],
    opacity: [0.5,1],
    easing: "easeOutExpo",
    duration: 700,
    offset: '-=875',
    delay: function(el, i, l) {
      return 80 * (l - i);
    }
  }).add({
    targets: '.mm',
    opacity: 0,
    duration: 100,
    easing: "easeOutExpo",
    delay: 1000
  });
  });
  </script>
    </head>
    <body>
	<style type="text/css">
        body {
			background-attachment:fixed;
		}
		h1{
			color: #b98073;
		}
		</style>
		
        <div class="container">
            <nav class="navbar navbar-inverse">
                <div class="container-fluid">
                    <ul class="nav navbar-nav">
                        <li> <a href="{{ path('homepage') }}">Home</a> </li>
                        <li> <a href="{{ path('inscription') }}">Sign Up</a> </li>
                        {% if app.user %}
                            <li><a href="{{ path('security_logout') }}">Logout</a></li>
                            <li> <a href="{{ path('profil', {'url' : app.user.username}) }}">Profil</a> </li>
                        {% else %}
                            <li><a href="{{ path('security_login') }}">Login</a></li>
                        {% endif %}
                        <li> <a href="{{ path('my_date') }}">Votre réservation</a> </li>
                        <li> <a href="{{ path('make_date') }}">Proposer une réservation</a> </li>
                        <li> <a href="{{ path('add_img') }}">Ajouter un image</a> </li>
                        <li> <a href="{{ path('recherche')}}">Recherche</a> </li>
                    </ul>
                </div>
            </nav>
        </div>
        {% block body %}<h1 class="m"> WELCOME ! </h1>
		<h1 class="mm">Inscription</h1>
		{% block javascripts %}	{% endblock %}
{% endblock %}
    </body>
</html>
