{% extends 'base.html.twig' %}
{% block title%}Ajouter une reservation{% endblock %}
{% block body %}
    <h1>Ajouter une réservation</h1>
    {{ form_start(form) }}
	{{ form_widget(form) }}
	{{ form_end(form) }}
	<h2>Réservations proposées</h2>
	<ul>
	{% for rdv in trdv %}
		{% if rdv.prenant %}
            <li>Réservation proposée par {{rdv.proposant}} le {{ rdv.date | date('Y-m-d H:i:s') }} pris par  [<a href="{{ path('profil', {'url' : rdv.prenant }) }}">{{rdv.prenant}}</a>]</li>  
        {% else %}
            <li>Réservation proposée par {{rdv.proposant}} le {{ rdv.date | date('Y-m-d H:i:s') }} [LIBRE]</li>  
        {% endif %}
	{% endfor %}
	</ul>
{% endblock %}